{
  "name": "static-starter-npm-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "npm run watch",
    "clean:css": "rimraf dist/css && mkdir -p dist/css",
    "clean:js": "rimraf dist/js && mkdir -p dist/js",
    "build:clean": "npm-run-all -s clean:*",
    "build:sass": "node-sass --output-style compressed ./src/css/bundle.scss ./dist/css/bundle.css",
    "build:prefix": "postcss ./dist/css/bundle.css --use autoprefixer --dir ./dist/css",
    "build:babel": "babel ./src/js/bundle.js --out-dir ./dist/js",
    "build:uglify": "uglifyjs ./dist/js/bundle.js --compress --output ./dist/js/bundle.js",
    "build": "npm-run-all -s build:*",
    "watch:browsersync": "browser-sync start --server --files './*.html' './src'",
    "watch:sass": "watch 'node-sass --output-style nested --source-map true ./src/css/bundle.scss ./dist/css/bundle.css' ./src/css",
    "watch:prefix": "watch 'postcss ./dist/css/bundle.css --use autoprefixer --dir ./dist/css' ./dist/css",
    "watch:babel": "watch 'babel ./src/js/bundle.js --out-dir ./dist/js' ./dist/js",
    "watch": "npm-run-all -p watch:*"
  },
  "author": "Glatch",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "autoprefixer": "^9.5.1",
    "browser-sync": "^2.26.5",
    "eslint": "^5.16.0",
    "eslint-config-eslint": "^5.0.1",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss-cli": "^6.1.2",
    "prettier": "^1.17.0",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^2.6.3",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.6.1",
    "uglify-js": "^3.5.10",
    "watch": "^1.0.2"
  }
}
