{
  "name": "static-starter-npm-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "npm run watch",
    "clean:css": "rimraf ./dist/css && mkdir -p ./dist/css",
    "clean:js": "rimraf ./dist/js && mkdir -p dist/js",
    "build:sass": "node-sass ./src/css/bundle.scss -o ./dist/css --output-style compressed",
    "build:postcss": "postcss ./dist/css/bundle.css -o ./dist/css/bundle.min.css",
    "build:babel": "babel ./src/js/bundle.js --out-dir ./dist/js",
    "build:uglify": "uglifyjs ./dist/js/bundle.js --compress --output ./dist/js/bundle.min.js",
    "build": "npm-run-all -s clean:* && npm-run-all build:*",
    "watch:browsersync": "browser-sync start --server --files './*.html, ./src'",
    "watch:sass": "watch 'node-sass ./src/css/bundle.scss -o ./dist/css --output-style nested --source-map ./dist/css' ./src/css",
    "watch:postcss": "watch 'postcss ./dist/css/bundle.css --use autoprefixer --dir ./dist/css' ./dist/css",
    "watch:babel": "watch 'babel ./src/js/bundle.js --out-dir ./dist/js' ./dist/js",
    "watch": "npm-run-all -p watch:*"
  },
  "author": "Glatch",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "eslint": "^7.21.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss": "^8.2.7",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "postcss-simple-vars": "^6.0.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0",
    "uglify-js": "^3.13.0",
    "watch": "^1.0.2"
  }
}
