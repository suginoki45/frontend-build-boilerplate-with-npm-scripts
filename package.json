{
  "name": "npm-scripts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "scripts": {
    "start": "npm run watch",
    "server": "node server.js",
    "styles:sass": "node-sass --include-path scss ./src/css/bundle.scss ./dist/css/bundle.css --output-style compressed",
    "styles:prefix": "postcss ./dist/css/bundle.css --use autoprefixer -d ./dist/css",
    "build:imagemin": "node imagemin.js",
    "build:styles": "npm-run-all -s styles:*",
    "build:scripts": "uglifyjs ./src/js/bundle.js -c -o ./dist",
    "build": "npm-run-all -s build:*",
    "watch:styles": "watch 'npm run build:styles' ./src/css",
    "watch:scripts": "watch 'npm run build:scripts' ./src/js",
    "watch": "watch 'npm-run-all -p watch:*'",
    "release:clean": "trash ./dist",
    "release:mkdir": "mkdirp ./dist",
    "release:css": "node-sass ./src/css --output ./",
    "release:scripts": "uglifyjs ./src/js/bundle.js -c -o ./dist",
    "release": "npm-run-all -s release:mkdir release:clean release:css release:scripts"
  },
  "author": "Glatch",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.4.7",
    "browser-sync": "^2.26.3",
    "eslint": "^5.13.0",
    "eslint-config-eslint": "^5.0.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "fs": "0.0.1-security",
    "imagemin": "^6.1.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^7.0.0",
    "imagemin-svgo": "^7.0.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss-cli": "^6.1.1",
    "prettier": "^1.16.4",
    "prettier-stylelint": "^0.4.2",
    "stylelint-config-standard": "^18.2.0",
    "uglify-js": "^3.4.9",
    "watch": "^1.0.2"
  }
}
